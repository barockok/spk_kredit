-body_id 'userSession'
=render 'layouts/logo_set'
%h3.text-center.no-bold Forgot Password
.userRegForm
	.inner
		= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {autocomplete: "off", :class => 'form-bottom-free'}) do |f|
			=f.label :email
			=f.email_field :email, :class => 'span12', :autofocus => true
			%hr
			.row-fluid
				.span3
					%p= link_to "Sign in", new_session_path(resource_name)
				.span9
					=f.button 'Send me reset password instructions', :class => 'btn pull-right'