-body_id 'userSession'
=render 'layouts/logo_set'
.userloginForm
	.inner
		= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {autocomplete: "off", :class => 'form-bottom-free'}) do |f|
			=f.label :email
			=f.email_field :email, :class => 'span12'
			=f.label :password
			=f.password_field :password, :class => 'span12'
			%hr
			.row-fluid
				.span7
					= link_to "Forgot your password?", new_password_path(resource_name)
				.span5
					=f.button 'Sign in', :class => 'btn pull-right'
%br
.userloginForm
	.inner
		.row-fluid
			.span8
				%span 've got a account?
			.span4
				.text-right
					= link_to "sign up here", new_registration_path(resource_name)